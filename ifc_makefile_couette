OUTDIR		= ./
OBJECTS		= parameters.o pressure.o matrices.o \
                  derivs.o ccf.o io.o couette_mod.o
COMPFLAGS	= -pg -O3 -c -w95 -tpp7 -xW #-parallel
#COMPFLAGS	= -c -g -d0 -CA -CB #-CS -CU -CV
TYPE            = implicit
LIBS            = -L/home/pg/n8049290/Utilities/LAPACK \
                  -llapack_LINUX -lblas_LINUX #-lpthread
COMPILER	= ifc

#-----------------------------------------------------------------------
all:	$(OBJECTS)
	$(COMPILER) -pg -O3 -w95 -tpp7 -xW -o\
        $(OUTDIR)couette_mod.out \
        $(OBJECTS) $(LIBS)

#-----------------------------------------------------------------------
parameters.o : parameters.f90
	$(COMPILER) $(COMPFLAGS) parameters.f90

#-----------------------------------------------------------------------
io.o : io.f90
	$(COMPILER) $(COMPFLAGS) io.f90

#-----------------------------------------------------------------------
pressure.o : pressure.f90
	$(COMPILER) $(COMPFLAGS) io.f90 pressure.f90

#-----------------------------------------------------------------------
matrices.o : matrices.f90
	$(COMPILER) $(COMPFLAGS) matrices.f90

#-----------------------------------------------------------------------
derivs.o : derivs.f90
	$(COMPILER) $(COMPFLAGS) derivs.f90

#-----------------------------------------------------------------------
ccf.o : ccf.f90
	$(COMPILER) $(COMPFLAGS) ccf.f90

#-----------------------------------------------------------------------
couette_mod.o : couette_mod_$(TYPE).f90
	$(COMPILER) $(COMPFLAGS) -o couette_mod.o \
                                    couette_mod_$(TYPE).f90
#-----------------------------------------------------------------------
clean :
	rm *.o *.mod *.d *.out
