OUTDIR		= ./
OBJECTS		= parameters.o pressure.o matrices.o \
                  derivs.o ccf.o io.o couette_mod.o
COMPFLAGS	= -O4 -g -pg -c
#COMPFLAGS	= -c -C -gline
LIBS		= -L/usr/i486-linuxlibc1/lib/ -lgmon
COMPILER	= f95

#-----------------------------------------------------------------------
all:	$(OBJECTS)
	$(COMPILER) -pg -o $(OUTDIR)couette_mod.out $(OBJECTS) $(LIBS)

#-----------------------------------------------------------------------
parameters.o : parameters.f90
	$(COMPILER) $(COMPFLAGS) parameters.f90

#-----------------------------------------------------------------------
pressure.o : pressure.f90
	$(COMPILER) $(COMPFLAGS) pressure.f90

#-----------------------------------------------------------------------
matrices.o : matrices.f90
	$(COMPILER) $(COMPFLAGS) matrices.f90

#-----------------------------------------------------------------------
derivs.o : derivs.f90
	$(COMPILER) $(COMPFLAGS) derivs.f90

#-----------------------------------------------------------------------
ccf.o : ccf.f90
	$(COMPILER) $(COMPFLAGS) ccf.f90

#-----------------------------------------------------------------------
io.o : io.f90
	$(COMPILER) $(COMPFLAGS) io.f90

#-----------------------------------------------------------------------
couette_mod.o : couette_mod.f90
	$(COMPILER) $(COMPFLAGS) couette_mod.f90
#-----------------------------------------------------------------------
clean :
	rm *.o *.mod *.out
